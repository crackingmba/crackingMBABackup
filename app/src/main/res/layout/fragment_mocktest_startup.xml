<!-- this is the new layout for this section -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="#ECEFF1"
    android:padding="5dp">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Pit Stop!"
                android:textSize="18sp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <!-- Personal Help -->
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp"
                android:layout_margin="5dp">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                        <TextView
                            android:text="A Pit Stop for all our enrolled users to take stock of their preparation."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:textColor="#212121"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- How we work -->
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/app_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp"
                android:layout_margin="5dp"
                >

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="How it works!"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            android:textColor="#212121"
                            android:gravity="center"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:text="1. Enrolled users, should complete the study material in that course or for a specific day (30 Day Challenge)"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textColor="#212121"/>

                        <TextView
                            android:text="2. Your performance in mock tests will be recorded for speed and accuracy."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textColor="#212121"/>

                        <TextView
                            android:text="3. We will post regular inputs for improvement in your Preparation Dashboard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textColor="#212121"/>

                        <TextView
                            android:text="4. You can ask your queries in your Preparation Dashboard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textColor="#212121"/>

                        <TextView
                            android:text="5. We will schedule 1 on 1 sessions with you to help you analyze your performance and improve scores in Full Length Mocks by TIME, CL and others."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textColor="#212121"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

           <Button
               android:id="@+id/mock_test_dashboard_btn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="15dp"
               android:padding="15dp"
               android:gravity="center"
               android:text="Preparation Dashboard"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>

</LinearLayout>