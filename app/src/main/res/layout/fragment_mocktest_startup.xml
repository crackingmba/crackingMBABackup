<!-- this is the new layout for this section -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="#ECEFF1"
    android:padding="5dp">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Mock CAT Analysis"
                android:textSize="18sp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <!-- Personal Help -->
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp"
                android:layout_margin="5dp">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                        <TextView
                            android:text="To maximize scores in CAT 2017, you not only need to give mock tests but also analyze them well to improve your performance."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:textColor="#212121"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- How we work -->
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/app_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp"
                android:layout_margin="5dp"
                >

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="How it works!"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            android:textColor="#212121"
                            android:gravity="center"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:text="1. You attempt the mock CAT on a Sunday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textColor="#212121"/>

                        <TextView
                            android:text="2. You record the score in that test in this app"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textColor="#212121"/>

                        <TextView
                            android:text="3. We analyze the key metrics based on the scores in that test"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textColor="#212121"/>

                        <TextView
                            android:text="4. We conduct 1 on 1 session with you to analyze your attempts in the question paper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textColor="#212121"/>

                        <TextView
                            android:text="5. We provide our insights and study material on how to improve for next mock CAT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textColor="#212121"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

           <Button
               android:id="@+id/mock_test_dashboard_btn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="15dp"
               android:padding="15dp"
               android:gravity="center"
               android:text="Mock Test Analysis Dashboard"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>

</LinearLayout>