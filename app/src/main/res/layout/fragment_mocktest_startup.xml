<!-- this is the new layout for this section -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:orientation="vertical"
android:layout_height="wrap_content"
android:padding="5dp">
<!-- This is the layout for the Home Page of Mock Test Tab -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="10dp"
    android:orientation="vertical">

<!--    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAT2017 Sectional Mock Test"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"/>-->


</LinearLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Quant CardView -->
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mock_test_quantrow"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            android:layout_margin="5dp"
            >

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/mock_test_quant_bg"
                android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mock_test_quant_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quant Sectional Tests"
                        android:textSize="20sp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="3dp"
                        android:textColor="#202727"
                        />
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <!-- DI LR CardView -->
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mock_test_dilrrow"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            android:layout_margin="5dp"
            >

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/mock_test_dilr_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mock_test_dilr_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DI and LR Sectional Tests"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3dp"
                    android:textColor="#202727"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!-- Verbal CardView -->
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mock_test_verbalrow"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            android:layout_margin="5dp"
            >

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/mock_test_verbal_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mock_test_verbal_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verbal Sectional Tests"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3dp"
                    android:textColor="#202727"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</ScrollView>

</LinearLayout>