<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/emptytext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_alignParentBottom="true" >

        <Button
            android:text="Invisible Button"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/emptytext">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="top"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/home_download_section_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recently Downloaded Videos"
                android:textAppearance="?android:attr/textAppearanceMedium" />

                <Button
                    android:id="@+id/home_refresh"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/refresh"
                    android:layout_marginLeft="10dp"
                    android:text="Refresh"/>
            </LinearLayout>
            <TextView
                android:id="@+id/home_download_noVideos"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:gravity="center_vertical"
                android:layout_margin="20dp"
                android:textAlignment="center"
                android:text="No offline videos available."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:visibility="gone"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_recently_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal" />



            <TextView
                android:id="@+id/home_latest_quant_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest Quant Prep Videos"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/home_latest_quant_noVideos"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:gravity="center_vertical"
                android:layout_margin="20dp"
                android:textAlignment="center"
                android:text="No latest quant videos available."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:visibility="gone"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/video_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal" />

            <Button
                android:id="@+id/gotoquant3"
                android:text="View More"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/home_latest_dilr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest DI &amp; LR Prep Videos"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/home_latest_dilr_noVideos"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:gravity="center_vertical"
                android:layout_margin="20dp"
                android:textAlignment="center"
                android:text="No DIL&amp; videos available."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:visibility="gone"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/video_recycler_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal" />

            <Button
                android:id="@+id/gotodi3"
                android:text="View More"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/home_latest_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest Verbal Videos"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/home_latest_other_noVideos"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:gravity="center_vertical"
                android:layout_margin="20dp"
                android:textAlignment="center"
                android:text="No Verbal videos available."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:visibility="gone"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/video_recycler_view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal" />

            <Button
                android:id="@+id/gotolatest3"
                android:text="View More"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:gravity="center_vertical"/>

