<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ECEFF1"
    android:padding="5dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Focused Preparation"
                    android:textSize="18sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:layout_margin="10dp"/>

<!--                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Select the exam which you are serious about cracking this year."
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:layout_margin="10dp"/>-->

                <!-- CAT CardView -->
                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/CATCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp"
                    android:layout_margin="5dp">

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="15dp">
                        <LinearLayout
                            android:layout_width="100dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="50dp"
                                android:src="@drawable/cat2017"
                                android:adjustViewBounds="true" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Focus 'CAT'"
                                android:layout_margin="3dp"
                                android:textStyle="bold"
                                android:textColor="#212121"
                                />
                            <TextView
                                android:text="Improve your confidence levels and score more in RC passages of CAT, IIFT, SNAP and XAT"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#212121"/>
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>



                <!-- IIFT CardView -->
                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/IIFTCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp"
                    android:layout_margin="5dp"
                    android:padding="15dp">

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="15dp">
                        <LinearLayout
                            android:layout_width="100dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="50dp"
                                android:src="@drawable/iift2017"
                                android:adjustViewBounds="true" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Focus 'IIFT'"
                                android:textStyle="bold"
                                android:layout_margin="3dp"
                                android:textColor="#212121"
                                />
                            <TextView
                                android:text="Ace the Quant section in CAT, IIFT, SNAP and XAT exams with our awesome study material, formulae sheets, mock tests and more."
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#212121"/>
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <!-- SNAP CardView -->
                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/SNAPCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp"
                    android:layout_margin="5dp"
                    android:padding="15dp">

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="15dp">
                        <LinearLayout
                            android:layout_width="100dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="50dp"
                                android:src="@drawable/snap2017"
                                android:adjustViewBounds="true" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Focus 'SNAP'"
                                android:layout_margin="3dp"
                                android:textStyle="bold"
                                android:textColor="#212121"
                                />
                            <TextView
                                android:text="Boost your GK preparation and approach the GK section in IIFT, SNAP and XAT with greater confidence."
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#212121"
                                />
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!-- XAT CardView -->
                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/XATCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp"
                    android:layout_margin="5dp"
                    android:padding="15dp">

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="15dp">
                        <LinearLayout
                            android:layout_width="100dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="50dp"
                                android:src="@drawable/xat2018"
                                android:adjustViewBounds="true" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Focus 'XAT'"
                                android:layout_margin="3dp"
                                android:textStyle="bold"
                                android:textColor="#212121"
                                />
                            <TextView
                                android:text="Boost your GK preparation and approach the GK section in IIFT, SNAP and XAT with greater confidence."
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#212121"
                                />
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>



            </LinearLayout>

        </ScrollView>

</LinearLayout>


