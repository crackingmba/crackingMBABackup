<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ECEFF1"
    android:padding="5dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- CAT CardView -->
               <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/CATCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp"
                    android:layout_margin="5dp">

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="15dp">
                        <LinearLayout
                            android:layout_width="100dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="50dp"
                                android:src="@drawable/cat2017"
                                android:adjustViewBounds="true" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30 Day CAT Challenge!"
                                android:layout_margin="3dp"
                                android:textStyle="bold"
                                android:textColor="#212121"
                                />
                            <TextView
                                android:text="A 30 Day CAT study plan with study material, mock tests and formulae"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#212121"/>
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>



                <!-- IIFT CardView -->
                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/IIFTCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp"
                    android:layout_margin="5dp"
                    android:padding="15dp">

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="15dp">
                        <LinearLayout
                            android:layout_width="100dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="50dp"
                                android:src="@drawable/iift2017"
                                android:adjustViewBounds="true" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="40 Day IIFT Challenge!"
                                android:textStyle="bold"
                                android:layout_margin="3dp"
                                android:textColor="#212121"
                                />
                            <TextView
                                android:text="A 40 Day IIFT study plan with study material, mock tests and formulae"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#212121"/>
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <!-- SNAP CardView -->
                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/SNAPCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp"
                    android:layout_margin="5dp"
                    android:padding="15dp">

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="15dp">
                        <LinearLayout
                            android:layout_width="100dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="50dp"
                                android:src="@drawable/snap2017"
                                android:adjustViewBounds="true" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50 Day SNAP Challenge!"
                                android:layout_margin="3dp"
                                android:textStyle="bold"
                                android:textColor="#212121"
                                />
                            <TextView
                                android:text="Specific study material, mini SNAP tests and 5 ALL INDIA ONLINE Full Length Tests (FLTs) should help you crack SNAP 2017 in style!"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#212121"
                                />
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!-- XAT CardView -->
                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/XATCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp"
                    android:layout_margin="5dp"
                    android:padding="15dp">

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="15dp">
                        <LinearLayout
                            android:layout_width="100dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="50dp"
                                android:src="@drawable/xat2018"
                                android:adjustViewBounds="true" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="60 Day XAT Challenge!"
                                android:layout_margin="3dp"
                                android:textStyle="bold"
                                android:textColor="#212121"
                                />
                            <TextView
                                android:text="Specific study material, mini XAT tests and 5 ALL INDIA ONLINE Full Length Tests (FLTs) should help you crack XAT 2018 in style!"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#212121"
                                />
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>



            </LinearLayout>

        </ScrollView>

</LinearLayout>


