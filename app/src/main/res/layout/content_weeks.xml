    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="top"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/weeksTitleHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CAT2017 Preparation Quant Section"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_margin="5dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Week 1 (Ratio and Proportion)"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_margin="5dp"
                android:gravity="left"/>

            <TextView
                android:id="@+id/Weeks_noVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Available Videos"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_margin="10dp"
                android:gravity="left"
                android:visibility="gone"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/week_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:scrollbars="horizontal" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
