<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:layout_margin="5dp"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/mock_test_quant_bg"
            android:id="@+id/mock_test_subcategories_list"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mocktest_topic_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quant Subcategory for Mock Tests"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_margin="3dp"
                android:textColor="#E3F2FD"
                android:textStyle="bold"
                />
            <!-- The invisible layouts go here -->
            <TextView
                android:id="@+id/mocktest_topic_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <ImageView
                android:id="@+id/mocktest_topic_thumbnail"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:visibility="gone"
                android:adjustViewBounds="true" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
