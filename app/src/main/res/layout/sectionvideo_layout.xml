<?xml version="1.0" encoding="utf-8"?>
    <!-- This is the section for displaying the SubCategories -->
<!-- Quant CardView -->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/quantCardView1"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="2dp"
    app:cardBackgroundColor="#C2CDD1"
    app:cardElevation="2dp"
    android:layout_margin="5dp"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

       <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CAT2017 Preparation"
            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Welcome to the CAT Preparation Material through instruction based videos. Select from any topic below to view the content."
            android:gravity="left"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="100dp"
                android:background="#FF7043"
                android:id="@+id/subcategory_img_bg_layout"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="50dp"
                    android:id="@+id/section_thumbnail"
                    android:src="@drawable/quant"
                    android:adjustViewBounds="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/section_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quant Section"
                    android:layout_margin="3dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/week_videoDescription2"
                    android:text="Details of Quant Section come here"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/section_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Text"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/section_category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Text"
                    android:gravity="bottom"
                    android:textAlignment="center"
                    android:visibility="gone"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

        </LinearLayout>

</LinearLayout>

</android.support.v7.widget.CardView>

