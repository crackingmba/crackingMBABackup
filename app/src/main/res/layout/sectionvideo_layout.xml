<?xml version="1.0" encoding="utf-8"?>
    <!-- This is the section for displaying the SubCategories -->
<!-- Quant CardView -->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/quantCardView1"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="2dp"
    app:cardBackgroundColor="#C2CDD1"
    app:cardElevation="2dp"
    android:layout_margin="5dp"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="100dp"
                android:background="#FF7043"
                android:id="@+id/subcategory_img_bg_layout"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="0"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="50dp"
                    android:id="@+id/section_thumbnail"
                    android:src="@drawable/quant"
                    android:adjustViewBounds="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/section_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sub Category Name"
                    android:layout_margin="3dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/subcat_description"
                    android:text="Description of SubCategory come here"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/subcat_date_range"
                    android:text="The SubCategory Date Range comes here"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- the invisible elements go here -->
                <TextView
                    android:id="@+id/section_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Text"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/section_category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Text"
                    android:gravity="bottom"
                    android:textAlignment="center"
                    android:visibility="gone"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/subcat_video_yn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:gravity="bottom"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_weight="0">
                
                <ImageView
                    android:id="@+id/subcat_right_arrow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"/>
            </LinearLayout>

        </LinearLayout>

</LinearLayout>

</android.support.v7.widget.CardView>

